<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_HomePage">



<LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="fill_horizontal"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/withMeLogo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="0.7"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="121dp"
            android:layout_height="59dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="5dp"
            android:src="@drawable/withme_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="74dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/admin_homePage_toCreate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="To Create User"          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/yummyIcon"
        android:layout_width="74dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/withme_yummy" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentIcon"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:src="@drawable/withme_comment" />

    </LinearLayout>
</LinearLayout>

<TextView
    android:id="@+id/noPostsMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nos posts available."
    app:layout_constraintTop_toBottomOf="@+id/header"/>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-16dp"
        tools:listitem="@layout/feed_post_item" />

    <LinearLayout
    android:id="@+id/navigationBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    android:backgroundTint="@color/lightgrey"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/outline_home_24" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_search_24" />

    <ImageView
        android:id="@+id/addPostIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/baseline_add_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/smallAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/baseline_person_24" />


    </androidx.cardview.widget.CardView>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>